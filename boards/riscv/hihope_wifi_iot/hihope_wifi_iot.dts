/dts-v1/;

#include <hisilicon/hi3861v100.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	model = "HiHope WiFi-IoT board with Hi3861V100 SoC";
	compatible = "hihope,wifi_iot";

	aliases {
		led0 = &led_1;
	};

	chosen {
		zephyr,sram = &sram;
		zephyr,flash = &flash;
	};

	leds {
		compatible = "gpio-leds";

		led_1: led_1 {
			gpios = <&gpio 9 GPIO_ACTIVE_LOW>;
			label = "LED1";
		};
	};
};
