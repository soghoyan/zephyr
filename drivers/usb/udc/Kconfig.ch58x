config UDC_CH58X
	bool "WCH ch58x USB device controller driver"
	default y
	depends on DT_HAS_WCH_CH58X_UDC_ENABLED
	imply UDC_WORKQUEUE
	help
	  WCH ch58x USB device controller driver.

config UDC_CH58X_MAX_EP_MSG
	int "Maximum number of UDC events"
	depends on UDC_CH58X
	range 4 64
	default 10
	help
	  Maximum number of USB device controller internal endpoint
	  events that can be queued.
