#include <mem.h>
#include <freq.h>

#include <wch/qingke-v4.dtsi>

/ {
	soc {
		flash: flash@0 {
			compatible = "soc-nv-flash";
			reg = <0x00000000 DT_SIZE_K(448)>;
		};

		sram: memory@20000000 {
			compatible = "mmio-sram";
			reg = <0x20000000 DT_SIZE_K(30)>;
		};

		syscon: system-controller@40001000 {
			reg = <0x40001000 0xa0>;
		};

		gpioa: gpio@400010a0 {
			compatible = "wch,ch57x-gpio";
			reg = <0x400010a0 0x20>;
			interrupts = <17 3>;
			gpio-controller;
			#gpio-cells = <2>;
			ngpios = <16>;
		};

		gpiob: gpio@400010c0 {
			compatible = "wch,ch57x-gpio";
			reg = <0x400010c0 0x20>;
			interrupts = <18 4>;
			gpio-controller;
			#gpio-cells = <2>;
			ngpios = <24>;
		};
	};

	clocks {
		hclk: clkmux {
			compatible = "wch,ch57x-clkmux";
			clock-frequency = <DT_FREQ_K(6400)>;
			#clock-cells = <0>;
		};
	};
};
